<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="TotalReservedSeatsOfRestaurantVO"
  Version="12.2.1.22.48"
  InheritPersonalization="merge"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="model.services.views.TotalReservedSeatsOfRestaurantVO_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <SQLQuery><![CDATA[SELECT 
    rt.restaurant_id,
    rt.available_seats AS total_seats,
    COALESCE(SUM(r.table_size), 0) AS total_reserved_seats,
    (rt.available_seats - COALESCE(SUM(r.table_size), 0)) AS available_seats
FROM 
    g3_restaurants rt
LEFT JOIN 
    g3_reservations r 
ON 
    rt.restaurant_id = r.restaurant_id 

GROUP BY 
    rt.restaurant_id, rt.available_seats]]></SQLQuery>
  <ViewAttribute
    Name="RestaurantId"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="10"
    Scale="0"
    Type="java.lang.Long"
    ColumnType="NUMBER"
    AliasName="RESTAURANT_ID"
    Expression="RESTAURANT_ID"
    SQLType="NUMERIC"/>
  <ViewAttribute
    Name="TotalSeats"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.math.BigDecimal"
    ColumnType="NUMBER"
    AliasName="TOTAL_SEATS"
    Expression="TOTAL_SEATS"
    SQLType="NUMERIC"/>
  <ViewAttribute
    Name="TotalReservedSeats"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.math.BigDecimal"
    ColumnType="NUMBER"
    AliasName="TOTAL_RESERVED_SEATS"
    Expression="TOTAL_RESERVED_SEATS"
    SQLType="NUMERIC"/>
  <ViewAttribute
    Name="AvailableSeats"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.math.BigDecimal"
    ColumnType="NUMBER"
    AliasName="AVAILABLE_SEATS"
    Expression="AVAILABLE_SEATS"
    SQLType="NUMERIC"/>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="model.ModelBundle"/>
  </ResourceBundle>
</ViewObject>
